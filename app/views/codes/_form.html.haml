= form_for @code do |f| 
  -if @code.errors.any? 
    .error
      %h4= pluralize(@code.errors.count, "error") + " prohibited this code from being saved:"
      %ul
        -@code.errors.full_messages.each do |msg|
          %li= msg
  .feild
    = f.label :title, "Title"
    = f.text_field :title
  .feild
    = f.label :tags, "Tags"
    = f.text_field :tags
  .field
    = f.label :source, "Source Code"
    %br
    = f.text_area :source
  = f.submit "Submit"