= form_for(@code) do |f| 
  -if @code.errors.any? 
    #error_explanation
      %h2= pluralize(@code.errors.count, "error") + "prohibited this code from being saved:"
      %ul
        -@code.errors.full_messages.each do |msg|
          %li= msg
  .feild
    = f.label :title, "Title"
    = f.text_field :title
  .field
    = f.label :source, "Source Code"
    %br
    = f.text_area :source
  = f.submit "Submit"