= form_for @assignment do |f| 
  - if @assignment.errors.any? 
    #error_explanation
      %h2 #{pluralize(@assignment.errors.count, "error")} prohibited this account from being saved:
      %ul
        - @assignment.errors.full_messages.each do |msg| 
          %li= msg
  .field
    = f.label :title
    %br
    = f.text_field :title
  .field
    = f.label :due_time
    %br
    = f.datetime_select :due_time 
  .actions
    = f.submit
